    AColor: TColor;
begin
    if ARect.Left >= ARect.Right then Exit;
    if ARect.Top >= ARect.Bottom then Exit;

    Dec(ARect.Right, 1);
    Dec(ARect.Bottom, 1);
    if ACol > 0
        then AColor := GiveCellColor(GetDataCol(ACol), 0, False)
        else AColor := FHeadingColor;
