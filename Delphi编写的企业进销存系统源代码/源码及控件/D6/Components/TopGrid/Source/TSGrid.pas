    begin
        FKeyEditCanceled := True;
        if not CheckCanEdit(True) then Exit;

        FKeyEditCanceled := False;
        FSpaceKeyMask := True;
        Repaint;
    end;
end;

function TtsGridCheckBox.UndoEdit(var Key: Word): Boolean;
