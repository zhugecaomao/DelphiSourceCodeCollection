    I, Index: Integer;
begin
    if FVisibleCols.Count = Cols then Exit;

    Index := 0;
    for I := 1 to Cols do
    begin
        if GridCols[GetDataCol(I)].Visible and (Index < FVisibleCols.Count) then
        begin
            Inc(Index);
            FVisibleCols[Index] := I;
