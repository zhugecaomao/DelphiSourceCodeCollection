function TtsCurrentCell.GetTransparentColor: TColor;
var
    Image: TtsImageItem;
    Bmp: TBitmap;
begin
    Result := FTransparentColor;
    if (FGrid.InGridState) then
    begin
        FetchCellValue;
        if ControlType = ctPicture then
        begin
            Image := nil;
            Bmp := nil;
