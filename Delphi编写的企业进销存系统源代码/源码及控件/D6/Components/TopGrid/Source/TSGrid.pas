                if CurDisplayRow > 1 then
                    InvertSelectedRows(1, CurDisplayRow - 1, False);
                if CurDisplayRow < RowCount - 1 then
                    InvertSelectedRows(CurDisplayRow + 1, RowCount - 1, False);

                DeleteAllRowSelection;
                SetCurrentSelected;
