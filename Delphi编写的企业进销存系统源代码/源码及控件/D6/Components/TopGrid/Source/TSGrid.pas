                else
                    Result := clBtnFace;
            end;
        end
        else
        begin
            Result := RowColor[DataRow];
            if Result = clNone then Result := GridCols[DataCol].Color;
            if Result = clNone then
            begin
                if ((Color <> clNone) and (Color <> clWindow)) or (not Cell3D) then
                    Result := Color
                else
