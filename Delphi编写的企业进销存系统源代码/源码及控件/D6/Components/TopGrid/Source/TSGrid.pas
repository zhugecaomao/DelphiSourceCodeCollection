    APoint : TPoint;
begin
    APoint.X := 0;
    APoint.Y := 0;
    Result := APoint;

    case Alignment of
        taLeftJustify : Result := GetTextCaretPosLeft;
        taCenter : Result := GetTextCaretPosLeft;
        taRightJustify : Result := GetTextCaretPosRight;
