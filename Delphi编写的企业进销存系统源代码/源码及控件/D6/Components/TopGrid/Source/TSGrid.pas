procedure TtsCustomPropElement.CopyFont(Value: TFont);
begin
    if FFont <> Value then
    begin
        if Value = nil then
        begin
            FFont.Free;
            FFont := nil;
        end
        else
        begin
            if FFont = nil then FFont := TFont.Create;
            FFont.Assign(Value);
            FFont.OnChange := FontChange;
        end;
    end;
end;

procedure TtsCustomPropElement.UpdateFont(Value: TFont);
begin
    ChangeFont := False;
    try
