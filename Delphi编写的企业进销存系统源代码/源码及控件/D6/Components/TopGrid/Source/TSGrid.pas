function TtsGridCols.FindCol(FieldName: string): TtsCol;
var
    DataCol: Longint;
begin
    Result := nil;
    DataCol := 0;
    while DataCol < Size - 1 do
    begin
        Inc(DataCol);
        if AnsiCompareText(FieldName, Col[DataCol].FieldName) = 0 then
        begin
            Result := Col[DataCol];
            Break;
        end;
    end;
end;

function TtsGridCols.GetCol(DataCol: Variant): TtsCol;
